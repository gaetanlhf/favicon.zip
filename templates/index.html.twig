{% extends "_base.html.twig" %}

{% block title %}
	{{ app_name }} - Generate favicons, the right way.
{% endblock %}

{% block body %}
	<div class="container my-5">
		<div class="row row-cols-1 row-cols-md-2 align-items-md-center g-5 py-3">
			<div class="col d-flex flex-column align-items-start gap-2">
				<h1 class="display-4 fw-bold text-body-emphasis">
					<span class="text-emphasis">Generating favicons</span>,<br>
					the right way.</h1>
				<p class="lead">With favicon.zip you can quickly and easily generate a .zip file encompassing favicons in various sizes and formats, paired with ready-to-use code snippets.</p>
			</div>

			<div class="col">
				<div class="row row-cols-1 g-4">
					<noscript>
						<div class="container">
							<div class="alert alert-danger">
								Please enable JavaScript to use
								{{ app_name }}.
							</div>
						</div>
					</noscript>
					<div class="container" id="use-js">
						{% for message in app.flashes("generator_error") %}
							<div class="alert alert-danger alert-dismissible fade show">
								{{ message }}
								<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
							</div>
						{% endfor %}
						{% for messages in app.flashes("form_error") %}
							<div class="alert alert-danger alert-dismissible fade show">
								{% for message in messages %}
									{{ message }}<br>
								{% endfor %}
								<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
							</div>
						{% endfor %}
						<div id="successAlert"></div>
						<div class="d-flex mb-3 align-items-center">
							<div>
								<button type="button" class="btn btn-primary btn-sm" onclick="window.location.reload();">
									<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewbox="0 0 16 16">
										<path fill-rule="evenodd" d="M8 3a5 5 0 1 0 4.546 2.914.5.5 0 0 1 .908-.417A6 6 0 1 1 8 2v1z"/>
										<path d="M8 4.466V.534a.25.25 0 0 1 .41-.192l2.36 1.966c.12.1.12.284 0 .384L8.41 4.658A.25.25 0 0 1 8 4.466z"/>
									</svg>
								</button>
							</div>
							<div class="ms-auto">
								<button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#settings">
									<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewbox="0 0 16 16">
										<path d="M9.405 1.05c-.413-1.4-2.397-1.4-2.81 0l-.1.34a1.464 1.464 0 0 1-2.105.872l-.31-.17c-1.283-.698-2.686.705-1.987 1.987l.169.311c.446.82.023 1.841-.872 2.105l-.34.1c-1.4.413-1.4 2.397 0 2.81l.34.1a1.464 1.464 0 0 1 .872 2.105l-.17.31c-.698 1.283.705 2.686 1.987 1.987l.311-.169a1.464 1.464 0 0 1 2.105.872l.1.34c.413 1.4 2.397 1.4 2.81 0l.1-.34a1.464 1.464 0 0 1 2.105-.872l.31.17c1.283.698 2.686-.705 1.987-1.987l-.169-.311a1.464 1.464 0 0 1 .872-2.105l.34-.1c1.4-.413 1.4-2.397 0-2.81l-.34-.1a1.464 1.464 0 0 1-.872-2.105l.17-.31c.698-1.283-.705-2.686-1.987-1.987l-.311.169a1.464 1.464 0 0 1-2.105-.872l-.1-.34zM8 10.93a2.929 2.929 0 1 1 0-5.86 2.929 2.929 0 0 1 0 5.858z"/>
									</svg>
								</button>
							</div>
						</div>
						{{ form_start(faviconForm, {"action": path("app_generate"), "method": "POST"}) }}
						{{ form_widget(faviconForm.drop) }}
						<div class="d-flex justify-content-center flex-column mt-3">
							{{ form_row(faviconForm.submit) }}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<div class="container">
		<div class="row justify-content-between">

			<div class="col-md-7">
